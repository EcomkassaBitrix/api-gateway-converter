	"item": [
		{
			"name": "Authentication",
			"item": [
				{
					"name": "Get Auth Token",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"// Автоматически сохраняем токен в переменную окружения",
									"if (pm.response.code === 200) {",
									"    var jsonData = pm.response.json();",
									"    if (jsonData.Status === 'Success' && jsonData.Data && jsonData.Data.AuthToken) {",
									"        pm.environment.set('auth_token', jsonData.Data.AuthToken);",
									"        console.log('Auth token saved:', jsonData.Data.AuthToken);",
									"    }",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"Login\": \"{{login}}\",\n  \"Password\": \"{{password}}\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/api/Authorization/CreateAuthToken",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"api",
								"Authorization",
								"CreateAuthToken"
							]
						},
						"description": "Получение токена авторизации для работы с API"
					},
					"response": []
				}
			]
		},
		{
			"name": "Receipt",
			"item": [
				{
					"name": "Create Receipt (Income)",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"// Автоматически сохраняем UUID чека в переменную",
									"if (pm.response.code === 200) {",
									"    var jsonData = pm.response.json();",
									"    if (jsonData.Status === 'Success' && jsonData.Data && jsonData.Data.ReceiptId) {",
									"        pm.environment.set('receipt_uuid', jsonData.Data.ReceiptId);",
									"        console.log('Receipt UUID saved:', jsonData.Data.ReceiptId);",
									"    }",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"Request\": {\n    \"Type\": \"Income\",\n    \"InvoiceId\": \"ORDER-{{$randomInt}}\",\n    \"CustomerReceipt\": {\n      \"TaxationSystem\": \"Common\",\n      \"Email\": \"customer@example.com\",\n      \"Phone\": \"+79001234567\",\n      \"Items\": [\n        {\n          \"Label\": \"Тестовый товар 1\",\n          \"Price\": 150.00,\n          \"Quantity\": 2,\n          \"Amount\": 300.00,\n          \"Vat\": \"VatNo\",\n          \"PaymentMethod\": 4,\n          \"Measure\": \"PIECE\"\n        },\n        {\n          \"Label\": \"Тестовый товар 2\",\n          \"Price\": 200.00,\n          \"Quantity\": 1,\n          \"Amount\": 200.00,\n          \"Vat\": \"Vat20\",\n          \"PaymentMethod\": 4,\n          \"Measure\": \"PIECE\"\n        }\n      ],\n      \"CashlessPayments\": [\n        {\n          \"PaymentSum\": 500.00\n        }\n      ]\n    }\n  },\n  \"AuthToken\": \"{{auth_token}}\",\n  \"GroupCode\": \"{{group_code}}\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/api/kkt/cloud/receipt",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"api",
								"kkt",
								"cloud",
								"receipt"
							]
						},
						"description": "Создание чека прихода (продажа)"
					},
					"response": []
				},
