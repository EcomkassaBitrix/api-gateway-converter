							"raw": "{\n  \"token\": \"{{auth_token}}\",\n  \"group_code\": \"{{group_code}}\",\n  \"operation\": \"sell\",\n  \"timestamp\": \"01.11.2025 12:00:00\",\n  \"external_id\": \"SIMPLE-{{$randomInt}}\",\n  \"receipt\": {\n    \"client\": {\n      \"email\": \"test@example.com\"\n    },\n    \"company\": {\n      \"email\": \"shop@example.com\",\n      \"sno\": \"osn\",\n      \"inn\": \"0000000000\",\n      \"payment_address\": \"https://example.com\"\n    },\n    \"items\": [\n      {\n        \"name\": \"Простой товар\",\n        \"price\": 100.0,\n        \"quantity\": 1.0,\n        \"sum\": 100.0,\n        \"payment_method\": \"full_payment\",\n        \"payment_object\": 4,\n        \"measure\": 0,\n        \"vat\": {\n          \"type\": \"none\"\n        }\n      }\n    ],\n    \"payments\": [\n      {\n        \"type\": 1,\n        \"sum\": 100.0\n      }\n    ],\n    \"total\": 100.0\n  }\n}"
